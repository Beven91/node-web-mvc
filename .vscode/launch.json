  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "启动程序",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "runtimeArgs": [
        "-r",
        "../cli/dist/register"
      ],
      "cwd": "${workspaceFolder}/src/example",
      "args": [
        "${workspaceFolder}/src/example/src/main/index.ts"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "调试CLI",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/src/cli-demo",
      "sourceMaps": true,
      "runtimeArgs": [
        "-r",
        "ts-node/register",
      ],
      "args": [
        "${workspaceFolder}/src/cli/src/index.ts",
        "build"
      ],
    },
  ]
}