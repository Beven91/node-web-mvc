{
  "ts-node": {
    "transpileOnly": true,
    "typeCheck": true
  },
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "noImplicitAny": false,
    "removeComments": false,
    "esModuleInterop":true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators":true,
    "downlevelIteration":true,
    "outDir": "./dist/",
    "rootDir": "./src"
  },
  "exclude": [
    "test",
    "dist",
    "node_modules",
  ]
}